<%- include("../partials/header", {
    backLink: (() => {
        if (locals.revisit) {
            if (locals.dimensionType === "measure") {
                return buildUrl(`/publish/${locals.datasetId}/measure`, i18n.language)
            } else {
                return buildUrl(`/publish/${locals.datasetId}/dimension/${locals.id}`, i18n.language)
            }
        } else {
            switch (locals.dimensionType) {
                case 'measure':
                    return buildUrl(`/publish/${locals.datasetId}/measure/review`, i18n.language);
                case 'date_period':
                case 'date':
                    return buildUrl(`/publish/${locals.datasetId}/date/${locals.id}/review`, i18n.language);
                default:
                    return buildUrl(`/publish/${locals.datasetId}/lookup/${locals.id}/review`, i18n.language);
            }
        }
    })(),
    returnLink: buildUrl(`/publish/${locals.datasetId}/tasklist`, i18n.language)
}); %>
<div class="form-background">
    <div class="govuk-width-container app-width-container">
        <main class="govuk-main-wrapper" id="main-content" role="main">
            <p class="govuk-body-l region-subhead govuk-!-font-weight-bold"><%= locals.columnName %></p>
            <h1 class="govuk-heading-xl">
                <% if (locals.dimensionType === 'measure') { %>
                    <%= t('publish.dimension_name.measure_heading') %>
                <% } else { %>
                    <%= t('publish.dimension_name.dimension_heading') %>
                <% } %>
            </h1>

            <%- include("../partials/error-handler"); %>

            <p class="govuk-body"><%= t('publish.dimension_name.hint') %></p>
            <ul class="govuk-list govuk-list--bullet">
                <li><%= t('publish.dimension_name.concise') %></li>
                <li><%= t('publish.dimension_name.unique') %></li>
                <li><%= t('publish.dimension_name.language') %></li>
            </ul>

            <form enctype="multipart/form-data" method="post">
                <div class="govuk-form-group">
                    <input class="govuk-input" id="name" name="name" type="text" value="<%= locals.dimensionName %>">
                </div>
                <div class="govuk-button-group">
                    <button type="submit" class="govuk-button" data-module="govuk-button">
                        <%= t('buttons.continue') %>
                    </button>
                </div>
            </form>
        </main>
    </div>
</div>
<%- include("../partials/footer"); %>
