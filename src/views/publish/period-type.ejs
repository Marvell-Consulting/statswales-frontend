<%- include("../partials/header"); %>

<div class="govuk-width-container app-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">
        <div class="top-links">
            <div class="govuk-width-container">
                <a href="<%= buildUrl(`/publish/${locals.datasetId}/dates/${dimension.id}/period/year-format`, i18n.language) %>" class="govuk-back-link"><%= t('buttons.back') %></a>
                <a href="<%= buildUrl(`/publish/${locals.datasetId}/tasklist`, i18n.language) %>" class="govuk-link return-link"><%= t('publish.header.overview') %></a>
            </div>
        </div>

        <p class="govuk-heading-s region-subhead"><%= dimension.metadata.name %></p>
        <h1 class="govuk-heading-xl"><%= t('publish.period-type-chooser.heading') %></h1>

        <%- include("../partials/error-handler"); %>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <form method="post" role="continue">
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <div class="govuk-radios" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="periodTypeChooserYears" name="periodType" type="radio" value="years">
                                    <label class="govuk-label govuk-radios__label" for="periodTypeChooserYears">
                                        <%= t('publish.period-type-chooser.chooser.years')%>
                                    </label>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="periodTypeChooserQuarters" name="periodType" type="radio" value="quarters">
                                    <label class="govuk-label govuk-radios__label" for="periodTypeChooserQuarters">
                                        <%= t('publish.period-type-chooser.chooser.quarters')%>
                                    </label>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="periodTypeChooserMonths" name="periodType" type="radio" value="months">
                                    <label class="govuk-label govuk-radios__label" for="periodTypeChooserMonths">
                                        <%= t('publish.period-type-chooser.chooser.months')%>
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="govuk-button-group">
                        <button type="submit" name="confirm" value="true" class="govuk-button" data-module="govuk-button" style="vertical-align: unset;" data-prevent-double-click="true">
                            <%= t('buttons.continue') %>
                        </button>
                        <a href="<%= buildUrl(`/publish/${locals.datasetId}/cube-preview`, i18n.language) %>" target="_blank" class="govuk-button govuk-button--secondary" data-module="govuk-button" style="vertical-align: unset;" data-prevent-double-click="true">
                            <%= t('buttons.preview') %>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include("../partials/footer"); %>
