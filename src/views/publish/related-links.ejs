<%- include("../partials/header"); %>
<div class="govuk-width-container app-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">

        <div class="top-links">
            <div class="govuk-width-container">
                <a href="javascript:history.back()" class="govuk-back-link"><%= t('buttons.back') %></a>
                <a href="<%= buildUrl(`/publish/${locals.datasetId}/tasklist`, i18n.language) %>" class="govuk-link return-link"><%= t('publish.header.overview') %></a>
            </div>
        </div>

        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <% if (locals.related_links.length > 0 && !locals.editId) { %>

                    <div class="govuk-grid-column-full">
                        <h1 class="govuk-heading-xl"><%= t('publish.related.list.heading') %></h1>

                        <table class="govuk-table">
                            <thead class="govuk-table__head">
                                <tr class="govuk-table__row">
                                    <th scope="col" class="govuk-table__header"><%= t('publish.related.list.table.url') %></th>
                                    <th scope="col" class="govuk-table__header"><%= t('publish.related.list.table.label') %></th>
                                    <th scope="col" class="govuk-table__header"><%= t('publish.related.list.table.action_header') %></th>
                                </tr>
                            </thead>
                            <tbody class="govuk-table__body">
                                <% for (let link of locals.related_links) { %>
                                    <tr class="govuk-table__row">
                                        <td class="govuk-table__cell"><a href="<%= link.url %>" class="govuk-link"><%= link.url %></a></td>
                                        <td class="govuk-table__cell"><%= link.label %></td>
                                        <td class="govuk-table__cell nowrap">
                                            <ul class="govuk-summary-list__actions-list">
                                                <li class="govuk-summary-list__actions-list-item">
                                                    <a href="<%= buildUrl(`/publish/${locals.datasetId}/related?edit=${link.id}`, i18n.language) %>" class="govuk-link">
                                                        <%= t('publish.related.list.table.action_edit') %>
                                                    </a>
                                                </li>
                                                <li class="govuk-summary-list__actions-list-item">
                                                    <a href="<%= buildUrl(`/publish/${locals.datasetId}/related?delete=${link.id}`, i18n.language) %>" class="govuk-link">
                                                        <%= t('publish.related.list.table.action_delete') %>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>

                        <h2 class="govuk-heading-m"><%= t('publish.related.list.add_another.heading') %></h2>

                        <form enctype="multipart/form-data" method="post">
                            <div class="govuk-form-group">
                                <fieldset class="govuk-fieldset" aria-describedby="add-link">
                                    <div class="govuk-radios" data-module="govuk-radios">
                                        <div class="govuk-radios__item">
                                            <input class="govuk-radios__input" id="addYes" name="add_link" type="radio" value="true" />
                                            <label class="govuk-label govuk-radios__label" for="addYes"><%= t('publish.related.list.add_another.options.yes.label') %></label>
                                        </div>
                                        <div class="govuk-radios__item">
                                            <input class="govuk-radios__input" id="addNo" name="add_link" type="radio" value="false" />
                                            <label class="govuk-label govuk-radios__label" for="addNo"><%= t('publish.related.list.add_another.options.no.label') %></label>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                            <button type="submit" class="govuk-button" data-module="govuk-button"><%= t('buttons.continue') %></button>
                            <a class="govuk-button govuk-button--secondary" href="javascript:history.back()"><%= t('buttons.cancel')%></a>
                        </form>
                    </div>

                <% } else { %>

                    <div class="govuk-grid-column-two-thirds">
                        <h1 class="govuk-heading-xl"><%= t('publish.related.add.heading') %></h1>

                        <%- include("../partials/error-handler"); %>

                        <p class="govuk-body"><%= t('publish.related.explain') %></p>

                        <ul class="govuk-list govuk-list--bullet">
                            <li><%= t('publish.related.explain_1') %></li>
                            <li><%= t('publish.related.explain_2') %></li>
                            <li><%= t('publish.related.explain_3') %></li>
                        </ul>

                        <form enctype="multipart/form-data" method="post">
                            <fieldset class="govuk-fieldset">
                                <input type="hidden" name="link_id" value="<%= locals.link.id %>" />
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="link_url"><%= t('publish.related.link_url.label') %></label>
                                    <input class="govuk-input" id="link_url" name="link_url" type="text" value="<%= locals.link.url %>" />
                                </div>
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="link_label"><%= t('publish.related.link_label.label') %></label>
                                    <div class="govuk-hint"><%= t('publish.related.link_label.hint') %></div>
                                    <input class="govuk-input" id="link_label" name="link_label" type="text" value="<%= locals.link.label %>" />
                                </div>
                            </fieldset>
                            <button type="submit" class="govuk-button" data-module="govuk-button"><%= t('buttons.continue') %></button>
                            <a class="govuk-button govuk-button--secondary" href="javascript:history.back()"><%= t('buttons.cancel')%></a>
                        </form>
                    </div>

                <% } %>

            </div>
        </div>
    </main>
</div>

<style>
    .nowrap {
        white-space: nowrap;
    }
</style>

<%- include("../partials/footer"); %>
