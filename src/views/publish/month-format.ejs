<%- include("../partials/header"); %>

<div class="govuk-width-container app-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">
        <div class="top-links">
            <div class="govuk-width-container">
                <a href="<%= buildUrl(`/publish/${locals.datasetId}/dates/${dimension.id}/period/type`, i18n.language) %>" class="govuk-back-link"><%= t('buttons.back') %></a>
                <a href="<%= buildUrl(`/publish/${locals.datasetId}/tasklist`, i18n.language) %>" class="govuk-link return-link"><%= t('publish.header.overview') %></a>
            </div>
        </div>

        <p class="govuk-heading-s region-subhead"><%= dimension.metadata.name %></p>
        <h1 class="govuk-heading-xl"><%= t('publish.month_format.heading') %></h1>

        <%- include("../partials/error-handler"); %>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <form method="post" role="continue">
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">
                            <div class="govuk-radios" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="month-format-1" name="monthFormat" type="radio" value="MMM">
                                    <label class="govuk-label govuk-radios__label" for="month-format-1">
                                        MMM
                                    </label>
                                    <div id="month-format-1-hint" class="govuk-hint govuk-radios__hint">
                                        <%= t('publish.month_format.example', { example: 'Jan' })%>
                                    </div>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="month-format-2" name="monthFormat" type="radio" value="mMM">
                                    <label class="govuk-label govuk-radios__label" for="month-format-2">
                                        mMM
                                    </label>
                                    <div id="month-format-4-hint" class="govuk-hint govuk-radios__hint">
                                        <%= t('publish.month_format.example', { example: 'm01' })%>
                                    </div>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="month-format-3" name="monthFormat" type="radio" value="MM">
                                    <label class="govuk-label govuk-radios__label" for="month-format-3">
                                        MM
                                    </label>
                                    <div id="quarter-format-3-hint" class="govuk-hint govuk-radios__hint">
                                        <%= t('publish.month_format.example', { example: '01' })%>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="govuk-button-group">
                        <button type="submit" name="confirm" value="true" class="govuk-button" data-module="govuk-button" style="vertical-align: unset;" data-prevent-double-click="true">
                            <%= t('buttons.continue') %>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include("../partials/footer"); %>
