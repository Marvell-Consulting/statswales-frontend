<%- include("../partials/header"); %>

<div class="govuk-width-container app-width-container">
	<!-- <a href="#" class="govuk-back-link">Back</a> -->
	<main class="govuk-main-wrapper" id="main-content" role="main">
		<div class="top-links">
			<div class="govuk-width-container">
					<a href="javascript:history.back()" class="govuk-back-link"><%= t('buttons.back') %></a>
					<% if (locals.datasetId) { %>
							<a href="<%= buildUrl(`/publish/${locals.datasetId}/tasklist`, i18n.language) %>" class="govuk-link return-link"><%= t('publish.header.overview') %></a>
					<% } %>
			</div>
		</div>

		<h1 class="govuk-heading-xl"><%= t('publish.change_data.title') %></h1>
		<%- include("../partials/error-handler"); %>

    <form enctype="multipart/form-data" method="post">
      <div class="govuk-form-group">
				<fieldset class="govuk-fieldset" role="group">
					<div class="govuk-radios" data-module="govuk-radios">
						<div class="govuk-radios__item">
							<input class="govuk-radios__input" id="change-1" name="change" type="radio" value="table">
							<label class="govuk-label govuk-radios__label" for="change-1"><%= t('publish.change_data.change_table.label') %></label>
							<div id="datatable-change-hint" style="padding-top: 10px; margin-left: -27px" class="govuk-hint govuk-radios__hint">
								<%= t('publish.change_data.change_table.description') %>
							</div>
						</div>
						<div class="govuk-radios__item">
							<input class="govuk-radios__input" id="change-2" name="change" type="radio" value="columns">
							<label class="govuk-label govuk-radios__label" for="change-2"><%= t('publish.change_data.change_columns.label') %></label>
							<div id="datatable-change-hint" style="padding-top: 10px; margin-left: -27px" class="govuk-hint govuk-radios__hint">
								<%= t('publish.change_data.change_columns.description') %>
							</div>
						</div>
					</div>
				</fieldset>
			</div>

      <div class="govuk-button-group">
				<button type="submit" class="govuk-button" data-module="govuk-button"><%= t('buttons.continue') %></button>
			</div>
  	</form>

	</main>
</div>

<%- include("../partials/footer"); %>
