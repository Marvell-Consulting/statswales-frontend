<%- include("partials/header"); %>

<div class="govuk-width-container app-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">

        <%- include("partials/flash-messages"); %>
        <%- include("partials/error-handler"); %>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl"><%= t('homepage.heading') %></h1>
            </div>
        </div>

        <% if (canCreate) { %>
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-half">
                    <a class="govuk-button" href="<%= buildUrl(`/publish`, i18n.language) %>"><%= t('homepage.buttons.create') %></a>
                </div>
            </div>
        <% } %>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <% if (locals.data && locals.data.length > 0) { %>
                    <%- include("partials/table", {
                        columns: [
                            { 
                                key: 'title',
                                label: t('homepage.table.title'),
                                format: (value, row) => {
                                    const url = buildUrl(`/publish/${row.id}/overview`, i18n.language);
                                    const content = value || `${row.title_alt} [${t('homepage.table.not_translated')}]`;
                                    return `<a href="${url}" class="govuk-link">${content}</a>`
                                }
                                    
                            },
                            { 
                                key: 'group_name',
                                label: t('homepage.table.group'),
                                cellClassName: 'group'
                            },
                            {
                                key: 'last_updated',
                                label: t('homepage.table.last_updated'),
                                style: 'width: 15%',
                                format: (value) => dateFormat(value, 'd MMMM yyyy', { locale: i18n.language }),
                                cellClassName: 'date'
                            },
                            {
                                key: 'status', 
                                label: t('homepage.table.dataset_status'),
                                format: (value) => value
                                    ? `<strong class="govuk-tag govuk-tag--${statusToColour(value)}">${t(`homepage.status.${value}`)}</strong>`
                                    : '',
                                cellClassName: 'status'
                            },
                            { 
                                key: 'publishing_status',
                                label: t('homepage.table.publish_status'),
                                format: (value) => value
                                    ? `<strong class="govuk-tag govuk-tag--${statusToColour(value)}">${t(`homepage.publishing_status.${value}`)}</strong>`
                                    : '',
                                cellClassName: 'status'
                            }
                            
                        ],
                        rows: locals.data
                    }); %>
                    <% if (locals.total_pages > 1) { %>
                        <%- include("partials/pagination"); %>
                    <% } %>
                <% } else { %>
                    <p class="govuk-body"><%= t('homepage.no_results.summary') %></p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li><%= t('homepage.no_results.summary_1') %></li>
                        <li><%= t('homepage.no_results.summary_2') %></li>
                    </ul>
                <% } %>
            </div>
        </div>

    </main>
</div>

<style>
    td.group, td.date, td.status {
        white-space: nowrap;
    }
    .govuk-tag {
        max-width: none;
    }
</style>

<%- include("partials/footer"); %>
