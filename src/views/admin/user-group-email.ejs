<%- include("../partials/header"); %>

  <div class="govuk-width-container app-width-container">
      <main class="govuk-main-wrapper" id="main-content" role="main">

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl"><%= t('admin.group.email.heading') %></h1>

            <%- include("../partials/error-handler"); %>

            <form enctype="multipart/form-data" method="post">
              <div class="govuk-form-group">
                <label class="govuk-label" for="email_cy"><%= t('admin.group.email.form.email_cy.label') %></label>
                <% var emailCyError = locals.errors?.find(e => e.field === 'email_cy') %>
                <% if (emailCyError) { %>
                  <p id="email-cy-error" class="govuk-error-message">
                    <span class="govuk-visually-hidden">Error:</span> <%= t(emailCyError.message.key) %>
                  </p>
                <% } %>
                <input class="govuk-input <%= emailCyError ? 'govuk-input--error' : '' %>" id="email_cy" name="email_cy" type="text" value="<%= locals.values.email_cy %>">
              </div>
              <div class="govuk-form-group">
                  <label class="govuk-label" for="email_en"><%= t('admin.group.email.form.email_en.label') %></label>
                  <% var emailEnError = locals.errors?.find(e => e.field === 'email_en') %>
                  <% if (emailEnError) { %>
                    <p id="email-en-error" class="govuk-error-message">
                      <span class="govuk-visually-hidden">Error:</span> <%= t(emailEnError.message.key) %>
                    </p>
                  <% } %>
                  <input class="govuk-input <%= emailEnError ? 'govuk-input--error' : '' %>" id="email_en" name="email_en" type="text" value="<%= locals.values.email_en %>">
              </div>

              <button type="submit" class="govuk-button" data-module="govuk-button">
                  <%= t('buttons.continue') %>
              </button>
            </form>
          </div>
        </div>

      </main>
  </div>

<%- include("../partials/footer"); %>
